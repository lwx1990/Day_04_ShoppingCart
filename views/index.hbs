<form method="POST" action="/">

    <div class="form-group">
        <label for="item">Item</label>
        <input type="text" name="item" id="item" class="form-control" placeholder="Please enter an item">
    </div>

    <div class="form-group">
        <label for="inputQty">Quantity</label>
        <input type="text" name="quantity" id="inputQty" class="form-control" min="1" placeholder="Please enter the qty">
    </div>

    <div class="form-group">
        <label for="unitPrice">Unit</label>
        <div class="input-group">        
             <div class="input-group-prepend">
                 <span class="input-group-text">$</span>
            </div>
            <input type="text" name="unitPrice" id="price" class="form-control" placeholder="Cost price per item">
            <div class="input-group-append">
                <span class="input-group-text">.00</span>
            </div>
        </div>

    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-lg btn-dark">Add to cart</button>
    </div>

    <input type="hidden" name="cartState" value="{{ cartState }}">
    
</form>


<table class="table mt-3 table-bordered ">
    <thead>
        <tr class="table-active">
            <th scope="col">Items</th>
            <th scope="col">Quantity</th>
            <th scope="col">Unit Price</th>
        </tr>
    </thead>

    <tbody>
        {{#each shopcart}}
            <tr>
                <td>{{this.item}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.unitPrice}}</td>
            </tr>
        {{/each}}
    </tbody>


</table>